{
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "target": "ES2022",
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./app",
    "paths": {
      "~/*": ["*"],
      "@/*": ["*"],
    },
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noEmit": true
  },
}
